! -- Fonts for URXVT terminal -- !
! URxvt*font:                     xft:Menlo Regular:size=6
! URxvt.scrollBar:                false
! URxvt.background:               Black
! URxvt.foreground:               Yellow

! URxvt*font: xft:Liberation Mono:pixelsize=14:antialias=false:hinting=true
! URxvt*boldFont: xft:Liberation Mono:bold:pixelsize=14:antialias=false:hinting=true
URxvt*font: xft:Inconsolata:pixelsize=17:antialias=true:hinting=true
URxvt*boldFont: xft:Inconsolata:bold:pixelsize=14:antialias=false:hinting=true
URxvt*depth:                24
URxvt*borderless:           1
URxvt*scrollBar:            false
URxvt*saveLines:            20000
URxvt*transparent:          false
URxvt*shading:             10
! Controls spacing between characters in pixels (from Arch wiki)
URxvt*letterSpace:          0

! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! Meta modifier for keybindings
!URxvt.modifier: super

! perl extensions the clipboard allows copy paste, but seems that it works already
! URxvt.perl-ext:             default,clipboard
URxvt.perl-ext:             default,clipboard,font-size

! ! Add keybindings for font size change
! URxvt.keysym.C-Up:     perl:font-size:increase
! URxvt.keysym.C-Down:   perl:font-size:decrease
! ! Use Ctrl + Shift + Up to reset font size
! URxvt.keysym.C-S-Up:   perl:font-size:reset
! ! Change the step size for font change (default is 1)
! URxvt.font-size.step: 4

! Alternative keybindings for font size Up/Down
! Add keybindings for font size change
URxvt.keysym.Control-equal:     perl:font-size:increase
URxvt.keysym.Control-minus:   perl:font-size:decrease
! Use Ctrl + Shift + Up to reset font size
URxvt.keysym.Control-plus:   perl:font-size:reset

! url-select (part of urxvt-perls package)
! URxvt.keysym.M-u:           perl:url-select:select_next
! URxvt.url-select.autocopy:  true
! URxvt.url-select.button:    2
! URxvt.url-select.launcher:  firefox
! URxvt.url-select.underline: true

! Nastavuje kopirovani (real copy/paste!)
! URxvt.keysym.Shift-Control-V:   perl:clipboard:paste
! URxvt.keysym.Shift-Control-C:   perl:clipboard:copy

! Font size on the fly
! URxvt.keysym.C-Up:     perl:font-size:increase
! URxvt.keysym.C-Down:   perl:font-size:decrease
! URxvt.keysym.C-S-Up:   perl:font-size:incglobal
! URxvt.keysym.C-S-Down: perl:font-size:decglobal

! disable the stupid ctrl+shift 'feature'
URxvt.iso14755:             false
URxvt.iso14755_52:          false

